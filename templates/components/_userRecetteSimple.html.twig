{# 
COMPOSANT DE RECETTE SIMPLE POUR UN USER
Ce fichier contient le code necessaire a l'affichage d'une recette simple dans la page catalogue d'un utilisateur connecte ou pas

 #}
<div class="card w-sm-75 mx-2 m-2 shadow " style="width: 18rem;">
	<div class="infos d-flex justify-content-around">
		<p><i class="fas fa-calendar-alt "></i> {{recette.date|date("d/m/Y")}}</p>
		<p>Par <b>{{recette.author.pseudo}}</b> </p>
	</div>
	<div class="card-title ">
		<h4 class="card-title titreRecette">{{recette.titre}}</h4>
	</div>

	<div class="img m-auto d-flex justify-content-center align-items-center">

		<img src="{{ asset('uploads/'~ recette.photo) }}" class="card-img-top rounded-3 h-50  align-center "
			alt="{{recette.titre}}">
	</div>
	<div class="card-body d-flex flex-column ">

		<div class="text w-100">
			<p class="card-text intro"><i class="fas fa-clock"></i> {{recette.temps}}min <i class="fas fa-users"></i> {{recette.nbPersonnes}} Personnes</p>
		</div>

		<div class="btns text-center mt-auto ">
			<a href="{{path('show_recette', {'id': recette.id})}}" class="btn btn-primary"><i
					class="fas fa-eye"></i></a>
			{% if app.user and app.user.id is same as (recette.author.id)  %}
			<a href="{{path('update_recette', {'id': recette.id})}}" class="btn btn-warning"><i
					class="fas fa-edit text-light"></i></a>

			<a href="{{path('delete_recette', {'id': recette.id})}}" class="btn btn-danger"
				onclick="return confirm('Etez-vous sur de vouloir effacer la recette?'); "><i
					class="fas fa-trash-alt"></i></a>
			{% endif %}
		</div>
	</div>
</div>