{% extends 'base.html.twig' %}

{% block title %}Ajouter une recette{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1> Form modif profil</h1>
    {% form_theme form_pseudo 'bootstrap_5_layout.html.twig' %}
    {{ form_start(form_pseudo) }}
    {{ form_row(form_pseudo.pseudo)}}
    {{ form_row(form_pseudo.password)}}
    {{ form_row(form_pseudo.photo)}}





