{% extends 'base.html.twig' %}
{# vue Pour l'inscription d'un utilisateur sur notre application #}
{% block title %}BecomeChef - Inscription
{% endblock %}

{% block body %}


	<div class=" containerDiv conteneurBox">
		<header class="titres coloredText">
			<h1>Inscription</h1>
		</header>
		<div class="step-row">
			<div id="progress"></div>
			<div class="step-col">
				<small>Step 1</small>
			</div>
			<div class="step-col">
				<small>Step 2</small>
			</div>
			<div class="step-col">
				<small>Step 3</small>
			</div>
			<div class="step-col">
				<small>Step 4</small>
			</div>
			<div class="step-col">
				<small>Step 5</small>
			</div>
		</div>
		<div
			class="formulaire">
			{# affichage du formulaire #}

			{{ form_start(registrationForm,{'attr':{'class': 'petitConteneur'}}) }}

			<!-- page 1 -->
			<div class="page first-page">
				<div class="titres fs-4 text-start w-75 ms-3 ">
					<h3 class="w-75 ">Quelle est votre adresse mail ?</h3>
				</div>

				<div class="champs w-100 d-flex flex-wrap">
					{{ form_widget(registrationForm.email,{'attr': {'class': 'formInput'}}) }}
					<div class="row w-50 text-start">
						{{form_errors(registrationForm.email)}}
					</div>


				</div>

				<div class="champs btns pt-5">
					<button class="firstNext next FormSub btn  fs-5 mb-2">Suivant</button>
				</div>

			</div>
			<!-- page 2 -->
			<div class="page">
				<div class="titres fs-4 text-start w-75 ms-0">
					<h3 class="w-75">Veuillez choisir un pseudo</h3>
				</div>

				<div class="champs w-100 d-flex flex-wrap">
					{{ form_widget(registrationForm.pseudo,{'attr': {'class': 'formInput'}}) }}
					<div class="row w-75 text-start">
						{{form_errors(registrationForm.pseudo)}}
					</div>
				</div>
				<div class="champs btns pt-5">
					<button class="prev-1 prev FormSub btn  fs-5 mb-2">Précédent</button>
					<button class="next-1 next FormSub btn   fs-5 mb-2">Suivant</button>

				</div>
			</div>
			<!-- page 3 -->
			<div class="page">
				<div class="titres fs-4 text-start w-75 ms-2">
					<h3 class="w-75">Voulez-vous ajouter une photo ?</h3>
				</div>

				<div class="champs w-100 d-flex flex-wrap">
					{{ form_widget(registrationForm.photo) }}
					<div class="row w-75 text-start">
						{{form_errors(registrationForm.photo)}}

					</div>

				</div>

				<div class="champs btns pt-5">
					<button class="prev-2 prev FormSub btn   fs-5 mb-2">Précédent</button>
					<button class="next-2 next FormSub btn  fs-5 mb-2">Suivant</button>

				</div>
			</div>
			<!-- page 4 -->
			<div class="page">
				<div class="titres fs-4 text-start w-75 ms-2">
					<h3 class="w-75">Veuillez choisir un mot de passe</h3>
				</div>
				<div class="champs  w-100 d-flex  flex-wrap">

					{{ form_widget(registrationForm.password, 
                    {'attr': {'class': 'formInput'}}
					) }}
					<div class="row w-75 text-start">
						{{form_errors(registrationForm.password)}}
					</div>


				</div>
				<div class="champs btns pt-5">

					<button class="prev-3 prev FormSub btn  fs-5 mb-2">Précédent</button>
					<button class=" next-3 FormSub btn   fs-5 mb-2">Suivant</button>
				</div>
			</div>
			<!-- page 5 -->
			<div class="page">
				<div class="titres fs-4 text-start w-75 ms-3 ">
					<p>En cochant cette case vous acceptez les
						<a href="{{path('cgu')}}" class="anchorStyle   ">Conditions générales d'utilisation</a>
						et la
						<a href="{{path('pdc')}}" class="anchorStyle ">Politique de confidentialité</a>
					</p>
				</div>
				<div class="champs">
					{{ form_widget(registrationForm.agreeTerms) }}
					<br>
					{{ form_errors(registrationForm.agreeTerms) }}
				</div>
				<div class="champs btns pt-5">
					<button class="prev-4 prev FormSub btn fs-5 mb-2">Précédent</button>

					<button type="submit" class="FormSub btn fs-5 mb-2">Inscription</button>
				</div>
			</div>


			{{ form_end(registrationForm) }}
		</div>
	</div>
	<script src="{{asset('js/inscription.js')}}"></script>

{% endblock %}
