{% extends 'base.html.twig' %}
{# vue pour la connexion d'un utilisateur sur l'application web #}
{% block title %}BecomeChef - Connexion
{% endblock %}

{% block body %}
	<div class="container-fluid conteneurBox">
		<div class="container my-5">
			<div class="row">
				<div class="col-6 m-auto ">
					<form method="post" >
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}
						{% if app.user %}
							<div class="mb-3">
								You are logged in as
								{{ app.user.username }},
								<a href="{{ path('app_logout') }}">Logout</a>
							</div>
						{% endif %}
						{# sinon on affiche le formulaire de connection #}
						<div class="h3 mb-3 text-center font-weight-normal"><img src="{{asset('img/BecomeChefLogo.png')}}" width="100px" height="100px" class="rounded-circle" alt="BecomeChef-logo"></div>
						<h1 class="titres coloredText text-center fs-1">Connexion</h1>
						<h5 class="text-center">Nouveau sur ce site ?
							<a href="{{path('app_register')}}" >S'inscrire</a>
						</h5>
						<label for="inputEmail">Email</label>
						<input type="email" name="email" id="inputEmail" class="form-control" placeholder="Votre email" required autofocus>
						<label for="inputPassword">Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" required>

						<input
						type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						{#
																					Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																					See https://symfony.com/doc/current/security/remember_me.html
																			
																					<div class="checkbox mb-3">
																						<label>
																							<input type="checkbox" name="_remember_me"> Remember me
																						</label>
																					</div>
																				#}

						<button type="submit" class="FormSub btn w-100 text-dark fs-5 my-2">Se connecter</button>
						<a href="{{path('forgot_password')}}">Mot de passe oubli√© ?</a>
					</form>
				</div>
			</div>


			<div class="row m-auto my-2 w-50">
				<div class="col-12 m-auto text-center">
					<span class="d-flex justify-content-center ">
						<hr class="w-100 mx-2">Ou
						<hr class="w-100 mx-2"></span>
					<p>
						<a href="/connect/github" class="btn btn-dark">
							<i class="fab fa-github me-2"></i>Se connecter avec Github</a>
					</p>
					<p>
						<a href="/connect/google" class="btn btn-light">
							<i class="fab fa-google me-2 text-danger"></i>Se connecter avec Google</a>
					</p>


				</div>
			</div>
		</div>
	</div>
{% endblock %}
