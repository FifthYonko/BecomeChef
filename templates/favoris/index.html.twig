{% extends 'base.html.twig' %}
{# Vue destine a l'affichage des recettes favorites d'un utilisateur #}
{% block title %}BecomeChef - Vos recettes favorites
{% endblock %}

{% block body %}

	<div class="container-fluid conteneurBox ">
		<div class="row">
			<h1 class="titres coloredText text-center fs-1">Vos recettes favorites</h1>
		</div>
		<div class="row w-75 m-auto justify-content-center">
			{% for recettes in favoris %}
				{% for recette in recettes %}
					{% if app.user and is_granted('ROLE_ADMIN') %}
						{% include "components/_AdminRecetteSimple.html.twig" %}
					{% else %}
						{% include "components/_userRecetteSimple.html.twig" %}
					{% endif %}

				{% endfor %}
			{% endfor %}
		</div>
	</div>


{% endblock %}
