{% extends 'base.html.twig' %}

{% block title %}
	BecomeChef-Catalogue Recettes Admin
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<h1 class="titres coloredText text-center fs-1">Nos recettes de cuisine</h1>
		<div
			class="row m-auto justify-content-center">
			{# on affiche les recettees grace a une boucle for #}
			{% for recette in recettes %}
				{# on utilise le composant recette #}
				{% include "components/_adminRecetteSimple.html.twig" %}
			{% endfor %}

		</div>
		<div class="row justify-content-center ">
			{{ knp_pagination_render(recettes,'components/_pagination.html.twig') }}
		</div>
	</div>
{% endblock %}
